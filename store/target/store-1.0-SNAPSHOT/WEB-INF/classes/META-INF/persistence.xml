<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Define Persistence Unit -->
    
    
    <persistence-unit name="HookahMafia_Unit" transaction-type="JTA">
        
        <!--<provider>org.hibernate.ejb.HibernatePersistence</provider> -->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>      
        <jta-data-source>jdbc/HookahMafia</jta-data-source>
        
        <class>ru.pazdrin.store.resources.model.entitys.User</class>
        <class>ru.pazdrin.store.resources.model.entitys.ProductInfo</class>
        <class>ru.pazdrin.store.resources.model.entitys.Basket</class>
        <class>ru.pazdrin.store.resources.model.entitys.BasketProduct</class>
        <class>ru.pazdrin.store.resources.model.entitys.Product</class>
        <class>ru.pazdrin.store.resources.model.entitys.Brand</class>
        <class>ru.pazdrin.store.resources.model.entitys.Type</class>
    </persistence-unit>
</persistence>
